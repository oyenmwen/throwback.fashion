
<%= javascript_pack_tag 'checkout' %>

  <div class="container mt-md-5">
  <div class="row">

    <div class="col-md-8 order-md-1">
      <h6 class="mb-4"><strong>SHIPPING ADDRESS</strong></h6>
<hr class="py-md-2">
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= label_tag(:first_name) %>
            <%= text_field :first_name,nil, id:"first_name", class:"form-control",:required => true %>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <%= label_tag(:last_name) %>
            <%= text_field :last_name,nil,id:"last_name", class:"form-control"%>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= label_tag(:email) %>
          <%= text_field :email, nil,id:"email",class:"form-control", placeholder:"you@example.com" %>
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>
        <div class="mb-3">
          <%= label_tag(:address) %>
          <%= text_field :address ,nil,id:"address",class:"form-control", placeholder:"1234 Main St" %>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        <div class="mb-3">
          <%= label_tag(:address, "Address 2 (Optional)") %>
          <%= text_field :address2, nil,id:"address_two", class:"form-control", placeholder:"Apartment or suite" %>
          </div>

        <div class="row">
          <div class="col-md-5 mb-3">
            <%= label_tag(:country) %>
            <%= text_field :country,nil,id:"country", class:"form-control" %>
            <div class="invalid-feedback">
              Please select a valid country.
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <%= label_tag(:state) %>
            <%= text_field :state ,nil,id:"state", class:"form-control" %>

            <div class="invalid-feedback">
              Please provide a valid state.
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <%= label_tag(:zip) %>
            <%= text_field :zip ,nil,id:"zip", class:"form-control" %>
            <div class="invalid-feedback">
              Zip code required.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="same-address">
          <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
        </div>

        <hr class="mb-4">
        <%= button_tag("Continue to payment", id:"submit", class:"btn btn-primary btn-lg btn-block") %>

    </div>
  </div>

</div>
