<%= javascript_pack_tag 'cart' %>

<div class="container mt-md-5">
  <div class="container mb-5">
    <div class="row">
      <div class="col col-md-10 col-12">
        <h5>Your Cart</h5>
      </div>
      <div class="col col-md-1 col-12 mobile-gone">
        <p>Subtotal:
          <strong class="subtotal"></strong>
        </p>
      </div>
      <div class="col col-md-1 col-12 mobile-gone">
        <a href="/checkout" class="btn btn-primary btn-lg">Checkout</a>
      </div>
    </div>
  </div>
  <h3 id="empty-info">Cart is empty!</h3>

  <div class="container text-center mb-md-5" id="items"></div>
  <div class="container py-md-0 py-4" id="sub-info">
    <div class="row">
      <div class="col">

        <h5 class="text-dark h5">Subtotal:
          <strong id="subtotal"></strong>
        </h5>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <%= link_to "Proceed to Shipping", checkout_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
</div>
</div>
